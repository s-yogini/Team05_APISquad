{
  "type": "object",
  "properties": {
    "batchId": { 
      "type": "integer"  
    },
	"batchName": {
	     "type": "string",
	     "minLength": 2,
	     "maxLength": 100,
	     "pattern": "^[A-Za-z0-9\\s]+(?:-[A-Za-z0-9\\s]+)*[1-9][0-9]?$",
	     "description": "Program name followed by sequence number 1-99 (e.g., 'SDET1', 'Java-Programming45')"
	},	
    "batchDescription": { 
      "type": ["string", "null"],  
	  "minLength": 4,
	   "maxLength": 25
    },
    "batchStatus": { 
      "type": "string",
      "enum": ["Active", "Inactive"], 
      "default": "Active"
    },
    "batchNoOfClasses": { 
      "type": ["integer"]  
    },
    "programId": { 
      "type": "integer"  
    },
    "programName": { 
      "type": ["string"],  
      "minLength": 0 
    }
  },
  "required": [
    "batchId",
    "batchName", 
    "batchStatus",
    "batchNoOfClasses",
    "programId",
    "programName"
  ]
}